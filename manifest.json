{
    "manifest_version": 2,
    "name": "Open Microsoft docs in Japanese",
    "version": "1.0.0.0",
    "icons": {
        "128": "icons/MsDocOpenInJapaneseIcon.png"
    },
    "browser_action": {
        "default_icon": {
            "128": "icons/MsDocOpenInJapaneseIcon.png"
        },
        "default_title": "Open Microsoft docs in Japanese",
        "default_popup": "popup/popup.html",
        "browser_style": false
    },
    "background": {
        "scripts": [
            "background/background.js"
        ]
    },
    "permissions": [
        "tabs"
    ]
}